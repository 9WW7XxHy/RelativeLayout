<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:text="1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/holo_red_light"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:text="2"
        android:layout_toEndOf="@id/number1"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#4CAF50"
        android:layout_below="@+id/number1"/>

    <TextView
        android:id="@+id/number3"
        android:layout_width="wrap_content"
        android:text="3"
        android:layout_toEndOf="@id/number2"
        android:layout_below="@+id/number2"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#FFC107"/>

    <TextView
        android:id="@+id/number4"
        android:layout_width="wrap_content"
        android:text="4"
        android:layout_toEndOf="@id/number3"

        android:layout_below="@+id/number3"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#9C27B0"/>


    <TextView
        android:id="@+id/number5"
        android:layout_width="wrap_content"
        android:text="5"
        android:layout_toStartOf="@id/number4"
        android:layout_below="@+id/number4"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#673AB7"/>


    <TextView
        android:id="@+id/number6"
        android:layout_width="wrap_content"
        android:text="6"
        android:layout_toStartOf="@id/number5"
        android:layout_below="@+id/number5"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#FF9800"/>



    <TextView
        android:id="@+id/number7"
        android:layout_width="wrap_content"
        android:text="7"
        android:layout_toStartOf="@id/number6"
        android:layout_below="@+id/number6"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#00BCD4"/>






</RelativeLayout>
